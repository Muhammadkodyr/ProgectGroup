                android:contentDescription="@string/saved"
                android:src="@drawable/save_instagram_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/s10"
                android:fontFamily="@font/poppins_semibold"
                android:text="@string/first_lesson"
                android:textSize="@dimen/s20" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="170sp"
                android:contentDescription="@string/saved"
